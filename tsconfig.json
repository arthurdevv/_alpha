{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "./app/**/*.d.ts"],
  },
  "include": ["./app/**/*", "./lib/**/*"]
}