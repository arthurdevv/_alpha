{
  "$schema": "http://json.schemastore.org/electron-builder",
  "appId": "alpha.app",
  "productName": "Alpha",
  "files": ["**/*", "dist", "app", "lib", "package.json"],
  "directories": {
    "buildResources": "build",
    "output": "release"
  },
  "extraMetadata": {
    "main": "./dist/index.js"
  },
  "publish": {
    "provider": "github"
  },
  "win": {
    "target": "nsis",
    "icon": "build/icon.png"
  },
  "nsis": {
    "include": "build/windows/installer.nsh",
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true
  },
  "linux": {
    "category": "TerminalEmulator",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "snap",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "mac": {
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "category": "public.app-category.developer-tools",
    "target": {
      "target": "default",
      "arch": ["x64", "arm64"]
    }
  },
  "npmRebuild": false
}
