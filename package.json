{
  "name": "alpha",
  "version": "0.1.0",
  "description": "A hackable and elegant open-source terminal built with web technologies.",
  "license": "MIT",
  "author": {
    "name": "Arthur Henrique",
    "email": "arthurhenrique.contact@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arthurdevv/alpha.git"
  },
  "main": "./dist/index.js",
  "scripts": {
    "dev": "yarn tsc && concurrently -k \"yarn:dev:renderer\" \"yarn:dev:server\"",
    "dev:server": "wait-on http-get://localhost:4000/ && yarn dev:electron",
    "dev:renderer": "cross-env NODE_ENV=development webpack serve --config-name renderer",
    "dev:electron": "cross-env NODE_ENV=development webpack --config-name main && electron dist",
    "build": "yarn tsc && cross-env NODE_ENV=production webpack",
    "package": "yarn build && electron-builder",
    "tsc": "rimraf dist release && tsc -b -v",
    "test": "jest --passWithNoTests",
    "lint": "eslint --ext .tsx,.ts,.js",
    "rebuild-pty": "electron-rebuild -f -w node-pty"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "chokidar": "^3.5.3",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.0.1",
    "node-pty": "^0.10.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "styled-components": "^5.3.5",
    "xterm": "^4.18.0",
    "xterm-addon-fit": "^0.5.0",
    "xterm-addon-ligatures": "^0.5.3",
    "xterm-addon-unicode11": "^0.3.0",
    "xterm-addon-web-links": "^0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^28.1.2",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "13.5.2",
    "electron-builder": "^23.0.3",
    "electron-rebuild": "^3.2.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.29.4",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "node-gyp": "^9.0.0",
    "style-loader": "^3.3.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.6.4",
    "wait-on": "^6.0.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^3.11.3"
  }
}
